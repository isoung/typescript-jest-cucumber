{
  "extends": "tslint:latest",
  "rules": {
    "curly": true,
    "no-empty": false,
    "no-console": false,
    "no-reference": false,
    "no-string-literal": false,
    "object-literal-shorthand": false,
    "no-var-requires": false,
    "only-arrow-functions": [false],
    "trailing-comma": false,
    "object-literal-sort-keys": [false],
    "object-literal-key-quotes": false,
    "one-line": [false],
    "no-submodule-imports": false,
    "no-implicit-dependencies": false,
    "prefer-conditional-expression": false,
    "no-empty-interface": false,
    "interface-name": false,
    "arrow-return-shorthand": false,

    "max-line-length": [true, 175],

    "align": [true, "parameters", "statements"],
    "arrow-parens": true,
    "class-name": false,
    "quotemark": [true, "single", "avoid-escape", "jsx-single"],
    "semicolon": [true, "always"],
    "variable-name": [true, "check-format", "allow-pascal-case", "allow-leading-underscore"],
    "whitespace": [true, "check-branch", "check-decl", "check-operator", "check-module", "check-separator", "check-type", "check-typecast"],
    "no-duplicate-imports": false
  }
}
